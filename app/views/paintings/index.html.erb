
<section class="min-height">

  <div class="paintings">

    <% @paintings.each do |painting| %>

      <div class="painting fadein">

        <%= link_to painting_path(painting) do %>
            <%= image_tag painting.image.medium %>
        <% end %>

        <%= link_to painting.title, painting_path(painting) %>

      </div>

    <% end %>
  </div>

</section>


<section>
    <ul class="exhibitions fadein">
      <li>
        <h3>
          Current exhibitions
        </h3>
        <h2>
          a little bird told me gallery, 2018
        </h2>
        <p>
          The Barn Courtyard, 25 High St, Wendover, Aylesbury HP22 6DU
        </p>

      </li>

      <li>
        <h3>
          Upcoming exhibitions
        </h3>
        <h2>
          Bucks Art Weeks, 9 - 24 June 2018
        </h2>
        <p>
          Sunneyhill Barn, Brewhouse Lane, Rowsham, HP22 4QT
        </p>
      </li>
    </ul>
</section>

<section class="container">
  <div class= "fadein">
    <h3>Interested in knowing more about our exhibitions?</h4>
    <p> Sign up to our Newsletter to hear more about current and upcoming exhibitions </p>
  </div>

    <div class="newsletter_form fadein">
      <%= simple_form_for :newsletter, url: newsletter_path, remote: true do |f| %>
      <%= f.input :first_name, label: false, placeholder: "First name*"%>
      <%= f.input :last_name, label: false, placeholder: "Last name*"%>
      <%= f.input :email, label: false, placeholder: "Email address*"%>

      <%= f.button :submit,"Sign me up", class: "button_primary"  %>

      <p class="smallprint"> *all fields required </p>

      <% end %>
    </div>

</section>

<section>
  <div class="instagram fadein">
    <div class="link-underline">
      <a href="https://www.instagram.com/gosneyart_/" target="_blank">@gosney_art</a>
    </div>
    <div class="insta-container"  id="instafeed"></div>
  </div>
</section>
